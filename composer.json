{
    "name": "thecodingmachine/stratigility-harmony",
    "description": "Cross-framework module for Stratigility",
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "TheCodingMachine\\": "src/"
        }
    },
    "require": {
        "php": ">=7.1",
        "thecodingmachine/funky": "^1",
        "thecodingmachine/middleware-list-universal-module": "^1.1",
        "zendframework/zend-diactoros": "^1.3",
        "zendframework/zend-stratigility": "^3.0",
        "zendframework/zend-httphandlerrunner": "^1.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3.1",
        "phpstan/phpstan": "^0.10.3",
        "thecodingmachine/phpstan-strict-rules": "^0.10.3",
        "satooshi/php-coveralls": "^1.0.1",
        "mnapoli/simplex": "^0.5.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "scripts": {
        "phpstan": "phpstan analyse src -c phpstan.neon --level=7 --no-progress -vvv",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
